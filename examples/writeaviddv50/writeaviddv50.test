#!/bin/sh

if type -P md5sum &>/dev/null; then
  MD5TOOL=md5sum
elif type -P md5 &>/dev/null; then
  MD5TOOL=md5
else
  echo "ERROR: require md5/md5sum tool"
  exit 1
fi


if ! ./writeaviddv50 --test /tmp/libmxf_test.mxf
then
  rm -f /tmp/libmxf_test.mxf
  exit 1
fi


$MD5TOOL < /tmp/libmxf_test.mxf | sed 's/\([a-f0-9]\)$/\1\ \ -/g' > /tmp/libmxf_test.mxf.md5
if diff /tmp/libmxf_test.mxf.md5 ${srcdir}/writeaviddv50.md5
then
	RESULT=0
else
	RESULT=1
fi

rm -f /tmp/libmxf_test.mxf /tmp/libmxf_test.mxf.md5


exit $RESULT
